{
  "manifest_version": 3,
  "name": "Cognito: Private Research Co-pilot",
  "version": "0.1.0",
  "description": "Your on-device AI co-pilot for research and tab management.",
  
  "permissions": [
    "tabs", 
    "contextMenus", 
    "sidePanel",
    "scripting",
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "side_panel": {
    "default_path": "index.html"
  },

  "action": {
    "default_title": "Open Cognito Side Panel"
  }
}