{
  "manifest_version": 3,
  "name": "Cognito",
  "version": "0.1.0",
  "description": "Your Private Research & Tab Co-pilot",
  "permissions": [
    "sidePanel",
    "contextMenus",
    "scripting",
    "tabs"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "action": {}
}