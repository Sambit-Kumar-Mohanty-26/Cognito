{
  "manifest_version": 3,
  "name": "Cognito",
  "version": "0.1.0",
  "description": "Your Private Research & Tab Co-pilot",
  "permissions": [
    "sidePanel",
    "contextMenus",
    "scripting",
    "tabs",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [],
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' data: blob: https:;"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "src/background.ts",
        "index.html",
        "assets/*.js",
        "assets/*.css"
      ],
      "use_dynamic_url": false
    }
  ]
}